{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
      "no-underscore-dangle": ["error", { "allow": ["_id", "__dirname"] }],
      // "ignoreChainWithDepth": 2 так не правильно. Это не правило, а часть конфигурации правила
      "newline-per-chained-call": ["error", { "ignoreChainWithDepth": 3 }]
    }
}